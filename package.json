{
  "name": "mock-and-proxy",
  "displayName": "Mock And Proxy",
  "description": "mock or proxy a server",
  "version": "0.0.1",
  "license": "MIT License",
  "publisher": "Adashuai5",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/.editorconfig",
    "workspaceContains:**/mockProxy.config.json",
    "onView:mockProxy",
    "onCommand:mockProxy.startMock"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mockProxy.startMock",
        "title": "Start Mock"
      }
    ],
    "configuration": [
      {
        "title": "Mock And Proxy Explorer",
        "properties": {
          "mockProxy.mock.rootDir": {
            "type": "string",
            "default": "${workspaceFolder}/mock",
            "description": "Mock And Proxy 文件的根目录"
          },
          "mockProxy.mock.port": {
            "type": "number",
            "default": "10088",
            "description": "Mock And Proxy 服务监听的端口"
          },
          "mockProxy.mock.autoServer": {
            "type": "boolean",
            "default": true,
            "description": "是否在应用启动时启用 Mock And Proxy"
          },
          "mockProxy.proxy.configPath": {
            "type": "string",
            "default": "${workspaceFolder}/mockProxy.config.json",
            "description": "Mock And Proxy 的配置文件"
          },
          "mockProxy.mock.startWith": {
            "type": "array",
            "default": [
              "/auth"
            ],
            "description": "只有此前缀的请求会被代理，如果没有设置，则全部请求都将被代理"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/koa": "^2.13.1",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "koa": "^2.13.1"
  }
}
